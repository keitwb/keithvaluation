app:
  restart: always
  environment:
    SITE_HOSTNAME: {{ app_hostname }}
    DJANGO_GA_ACCOUNT: {{ google_analytics_id }}
    DJANGO_STATIC_HOSTNAME: {{ static_hostname }}
    DJANGO_STATIC_PATH: {{ static_path }}
admin:
  restart: always
  environment:
    SITE_HOSTNAME: {{ admin_hostname }}
    DJANGO_STATIC_HOSTNAME: {{ static_hostname }}
    DJANGO_STATIC_PATH: {{ static_path }}
memcached:
  restart: always
nginx:
  restart: always
  ports:
   - "80:80"
   - "443:443"
  environment:
    ADMIN_SSL_CERT: |
      {{ admin_ssl_cert|indent(6) }}
    ADMIN_SSL_KEY: |
      {{ admin_ssl_key|indent(6) }}

